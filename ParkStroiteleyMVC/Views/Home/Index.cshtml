@{ Layout = "_Layout"; }
@model ParkStroiteleyMVC.Models.ModelPages.IndexModel;
@using ParkStroiteleyMVC.Models.Extensions;
<div class="news-wrapper">
    <div class="row">
        <div class="col pb-4">
            <h2>Последние новости парка</h2>
        </div>
    </div>
    @for (int i = 0; Model.News != null && i < Model.News.Count; i += 4)
    {
        <div class="row">
            @for (int j = 0; j < 4; j++)
            {
                <div class="col-md-3 col-ml-12">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="#" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@Model.News[i + j].Header</h5>
                            <p class="card-text">
                              
                            </p>
                            <a href="#" class="btn btn-primary">Прочитать</a>
                            <span style="margin-left: 5%;" class="badge badge-primary">Ежедневная</span>
                        </div>
                    </div>
                </div>

            }
        </div>
    }
</div>           